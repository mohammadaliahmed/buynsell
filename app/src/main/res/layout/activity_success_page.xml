<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:src="@drawable/success" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/viewmyads"
            android:layout_alignStart="@+id/viewmyads"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="33dp"
            android:text="Ad has been successfully posted!"
            android:textSize="20sp" />

        <Button

            android:id="@+id/viewmyads"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/postnew"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="48dp"
            android:background="@color/colorPrimary"
            android:text="View my ads"
            android:textColor="#fff"
            android:layout_alignLeft="@+id/postnew" />

        <Button
            android:visibility="gone"
            android:id="@+id/sharead"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/viewmyads"
            android:layout_below="@+id/viewmyads"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="Share ad"
            android:textColor="#fff" />

        <Button
            android:id="@+id/postnew"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sharead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="Post new Ad"
            android:textColor="#fff" />

        <Button
            android:id="@+id/back"
            android:layout_width="300dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postnew"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Back to homepage" />
    </RelativeLayout>


</ScrollView>
